<div class="m-4">
    <div class="row">
        {{#each posts}}
            <div class="col-sm-6 col-lg-4">
                <div class="card card-post-item">
                    <a href="/posts/{{this.slug}}">
                    <div class="card-body">
                        <a href="/posts/{{this.slug}}">
                        <h5 class="card-title">{{this.title}}</h5>
                        </a>
                        <p class="card-text">{{this.content}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>